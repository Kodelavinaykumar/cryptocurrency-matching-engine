{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Matching Engine Server",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "HOST": "0.0.0.0",
                "PORT": "8000",
                "DEBUG": "True",
                "LOG_LEVEL": "INFO"
            }
        },
        {
            "name": "Run Test Client",
            "type": "python",
            "request": "launch",
            "program": "test_client.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "program": "run_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["all"]
        },
        {
            "name": "Run Performance Benchmarks",
            "type": "python",
            "request": "launch",
            "program": "run_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["benchmark"]
        }
    ]
}
